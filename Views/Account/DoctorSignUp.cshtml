@model SignUpViewModel

@{
    ViewBag.Title = "Doctor Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html lang="en">

<head>
    <title>Doctor Registration</title>

    <style>
        .logo {
            margin-top: 70px;
        }
    </style>

    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,400italic,600,700|Raleway:300,400,500,600,700|Crete+Round:400italic" rel="stylesheet" type="text/css" />

</head>

<body class="login">
    <!-- start: REGISTRATION -->
    <div class="row">
        <div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="logo margin-top-30">
                <a asp-area="" asp-controller="Home" asp-action="Index"><h2>HMS | Doctor Registration</h2></a>
            </div>
            @using (Html.BeginForm("DoctorSignUp", "Account", FormMethod.Post))
            {
                <div class="box-register">
                    <fieldset>
                        <legend>
                            Sign Up
                        </legend>
                        <p>
                            Enter your personal details below:
                        </p>
                        <div class="form-group">
                            @Html.TextBoxFor(temp => temp.EmailAddress, new { placeholder = "Email Address", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.EmailAddress, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(temp => temp.Password, new { placeholder = "Password", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Password, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(temp => temp.confirmPassword, new { placeholder = "Confirm your password", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.confirmPassword, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group error">
                            @if (@ViewBag.error != null)
                            {

                                <label style="color:red;"> @ViewBag.error</label>
                            }
                        </div>
                        <div class="form-actions">
                            
                            <button type="submit" class="btn btn-primary pull-right" id="submit" name="submit">
                                Submit <i class="fa fa-arrow-circle-right"></i>
                            </button>
                        </div>
                    </fieldset>

                    <div class="copyright">
                        &copy; <span class="current-year"></span><span class="text-bold text-uppercase"> HMS</span>. <span>All rights reserved</span>
                    </div>

                </div>
            }
            <!-- start: REGISTER BOX -->


        </div>
    </div>


</body>
<!-- end: BODY -->
</html>