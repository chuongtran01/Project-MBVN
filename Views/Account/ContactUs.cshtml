@model ContactUsViewModelGuest

@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html lang="en">

<head>
    <title>User Registration</title>

    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,400italic,600,700|Raleway:300,400,500,600,700|Crete+Round:400italic" rel="stylesheet" type="text/css" />

</head>

<body class="login">
    <!-- start: REGISTRATION -->
    <div class="row">
        <div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="logo margin-top-30">
                <a asp-area="" asp-controller="" asp-action=""><h2>HMS | Contact Us</h2></a>
            </div>
            @using (Html.BeginForm("ContactUs", "Account", FormMethod.Post))
            {
                <div class="box-register">
                    @*<form name="registration" id="registration" method="post" onSubmit="return valid();">*@
                    <fieldset>
                        <legend>
                            Contact Us
                        </legend>
                        <div class="form-group">
                            @Html.LabelFor(temp => temp.Fullname)
                            @Html.TextBoxFor(temp => temp.Fullname, new { placeholder = "Full name", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Fullname, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(temp => temp.Email)
                            @Html.TextBoxFor(temp => temp.Email, new { placeholder = "Email address", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Email, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(temp => temp.Contactno)
                            @Html.TextBoxFor(temp => temp.Contactno, new { placeholder = "Phone number", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Contactno, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(temp => temp.Message)
                            @Html.TextAreaFor(temp => temp.Message, new { placeholder = "Message....", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Message, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group error">
                            @if (@ViewBag.success != null)
                            {

                                <label style="color:green;"> @ViewBag.success</label>
                            }
                        </div>
                        <div class="form-group error">
                            @if (@ViewBag.error != null)
                            {

                                <label style="color:red;"> @ViewBag.error</label>
                            }
                        </div>



                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary pull-right" id="submit" name="submit">
                                Send <i class="fa fa-arrow-circle-right"></i>
                            </button>
                        </div>
                    </fieldset>

                    <div class="copyright">
                        &copy; <span class="current-year"></span><span class="text-bold text-uppercase"> HMS</span>. <span>All rights reserved</span>
                    </div>

                </div>
            }
            <!-- start: REGISTER BOX -->


        </div>
    </div>


</body>
<!-- end: BODY -->
</html>