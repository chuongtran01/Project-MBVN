@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Patient Password Recovery</title>
</head>
<body class="login">
    <div class="row">
        <div class="main-login col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="logo margin-top-30">
                <h2>Patient Password Recovery</h2></>
            </div>
            @if (Model?.EmailSent == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>
                        If you are registered with us, <br />
                        We have sent an email on your registered email id
                    </p>
                </div>
            }
            else
            {
                <div class="box-login">
                    <form class="form-login" asp-action="ForgotPassword">
                        <fieldset>
                            <legend>
                                Patient Password Recovery
                            </legend>
                            <p>
                                Please enter your Email and password to recover your password.<br />

                            </p>

                            <div class="form-group">
                                <span class="input-icon">
                                    <input type="email" class="form-control" name="email" placeholder="Registered Email" required>
                                    <i class="fa fa-user"></i>
                                </span>
                            </div>

                            <div class="form-actions">

                                <button type="submit" class="btn btn-primary pull-right" name="submit">
                                    Reset <i class="fa fa-arrow-circle-right"></i>
                                </button>
                            </div>
                            <div class="new-account">
                                Already have an account?
                                <a asp-area="" asp-controller="Account" asp-action="Login">
                                    Log-in
                                </a>
                            </div>
                        </fieldset>
                    </form>

                    <div class="copyright">
                        &copy; <span class="text-bold text-uppercase">  Hospital Management System</span>
                    </div>

                </div>
            }


        </div>
    </div>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
</body>
<!-- end: BODY -->
</html>