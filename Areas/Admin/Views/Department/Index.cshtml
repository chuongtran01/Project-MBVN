@model IEnumerable<Department>

@{
    ViewBag.Title = "Admin | Department List";
    @*Layout = "~/Views/Shared/_Layout.cshtml";*@
}


<body>
    <div>
        <div class="app-content">
            <!-- end: TOP NAVBAR -->
            <div class="main-content">
                <div class="wrap-content container" id="container">
                    <!-- start: PAGE TITLE -->
                    <section id="page-title">
                        <div class="row">
                            <div class="col-sm-8">
                                <h1 class="mainTitle">Admin | Manage Departments</h1>
                            </div>
                            @*<ol class="breadcrumb">
                    <li>
                        <span>Admin</span>
                    </li>
                    <li class="active">
                        <span>Manage Doctors</span>
                    </li>
                </ol>*@
                        </div>
                    </section>
                    <a asp-area="Admin" asp-controller="Department" asp-action="AddDepartment" class="btn btn-primary">ADD</a>
                    <div class="container-fluid container-fullw bg-white">
                        <div class="row">
                            <div class="col-md-12">
                                <p style="color:red;">
                                </p>
                                <table class="table table-hover" id="sample-table-1">
                                    <thead>
                                        <tr>
                                            <th class="center">#</th>
                                            <th>Department Name</th>
                                            <th>Location</th>
                                            <th>Creation Date</th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>

                                        @if (Model != null)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.DepartmentId</td>
                                                    <td>@item.Name</td>
                                                    <td>@item.Location</td>
                                                    <td>@item.CreationDate</td>
                                                    <td>
                                                        <div class="visible-md visible-lg hidden-sm hidden-xs">
                                                            <a asp-action="EditDepartment" asp-route-id="@item.DepartmentId" class="btn btn-transparent btn-xs" tooltip-placement="top" tooltip="Edit"><i class="fa fa-pencil"></i></a>
                                                            @*<button type="submit" onClick="return confirm('Are you sure you want to delete?')" class="btn btn-transparent btn-xs"><i class="fa fa-times fa fa-white"></i></button>*@
                                                            @*@Html.ActionLink("Delete", "Delete", "Department", new {id = @item.DepartmentId}, null)*@
                                                            @using (Html.BeginForm("Delete", "Department", FormMethod.Post))
                                                                {
                                                                @*<form asp-action="Delete" asp-route-id="@item.DepartmentId">*@
                                                                    <input type="hidden" name="Id" value=@item.DepartmentId />
                                                                    @*<input type="submit" value="Delete"/>*@
                                                                    <button type="submit" onClick="return confirm('Are you sure you want to delete?')" class="btn btn-transparent btn-xs"><i class="fa fa-times fa fa-white"></i></button>

                                                                }
                                                                    @*</form>*@
                                                            </div>
                                                            <div class="visible-xs visible-sm hidden-md hidden-lg">
                                                                <div class="btn-group" dropdown is-open="status.isopen">
                                                                </div>
                                                            </div>
</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>

