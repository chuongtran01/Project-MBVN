@model AddDepartmentViewModel

@{
    ViewBag.Title = "Admin | Add Department";
    @*Layout = "~/Views/Shared/_Layout.cshtml";*@
}

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("AddDepartment", "Department", FormMethod.Post))
        {
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            @*<input type="hidden" asp-for="DoctorId" />*@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                @Html.TextBoxFor(temp => temp.Name, new { placeholder = "Name", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.Name, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                @Html.TextBoxFor(temp => temp.Location, new { placeholder = "Location", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.Location, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                 <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Department">Back to List</a>
</div>



