@model AddPatientViewModel

@{
    ViewBag.Title = "Admin | Add Patient";
    @*Layout = "~/Views/Shared/_Layout.cshtml";*@
}

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div>@ViewBag.error</div>
        @using (Html.BeginForm("AddPatient", "Patient", FormMethod.Post))
        {
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            @*<input type="hidden" asp-for="DoctorId" />*@
            <div class="form-group">
                @Html.LabelFor(temp => temp.EmailAddress, new { @class = "control-label" })
                @Html.TextBoxFor(temp => temp.EmailAddress, new { placeholder = "Email Address", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.EmailAddress, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(temp => temp.Password, new { @class = "control-label" })
                @Html.PasswordFor(temp => temp.Password, new { placeholder = "Password", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.Password, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(temp => temp.ConfirmedPassword, new { @class = "control-label" })
                @Html.PasswordFor(temp => temp.ConfirmedPassword, new { placeholder = "Password", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.ConfirmedPassword, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(temp => temp.FirstName, new { @class = "control-label" })
                @Html.TextBoxFor(temp => temp.FirstName, new { placeholder = "First Name", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.FirstName, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(temp => temp.LastName, new { @class = "control-label" })
                @Html.TextBoxFor(temp => temp.LastName, new { placeholder = "Last Name", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.LastName, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(temp => temp.Gender, new { @class = "control-label" })
                @Html.DropDownListFor(s => s.Gender, new SelectList(Enum.GetValues(typeof(Gender))), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(temp => temp.Birthday, new { @class = "control-label" })
                @Html.EditorFor(temp => temp.Birthday, new { placeholder = "DOB", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.Birthday, null, new { @class = "text-danger" })
            </div>


            <div class="form-group">
                @Html.LabelFor(temp => temp.Address, new { @class = "control-label" })
                @Html.TextAreaFor(temp => temp.Address, new { placeholder = "Password", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.Address, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(temp => temp.PhoneNumber, new { @class = "control-label" })
                @Html.TextBoxFor(temp => temp.PhoneNumber, new { placeholder = "Phone Number", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.PhoneNumber, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(temp => temp.EmergencyContact, new { @class = "control-label" })
                @Html.TextBoxFor(temp => temp.EmergencyContact, new { placeholder = "Emergency Contact", @class = "form-control" })
                @Html.ValidationMessageFor(temp => temp.EmergencyContact, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Patient">Back to List</a>
</div>



